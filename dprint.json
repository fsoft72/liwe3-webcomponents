{
  "lineWidth": 180,
  "indentWidth": 4,
  "useTabs": true,
  "newLineKind": "lf",

  "excludes": ["**/node_modules", "**/*-lock.json"],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.95.12.wasm",
    "https://plugins.dprint.dev/json-0.21.0.wasm",
    "https://plugins.dprint.dev/markdown-0.20.0.wasm",
    "https://plugins.dprint.dev/toml-0.7.0.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.14.3.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.24.0.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm"
  ],

  "json": {
    "lineWidth": 180,
    "indentWidth": 4,
    "useTabs": true,
    "newLineKind": "lf",
    "commentLine.forceSpaceAfterSlashes": true,
    "preferSingleLine": false,
    "trailingCommas": "jsonc",
    "ignoreNodeCommentText": "dprint-ignore"
  },

  "svelte": {
    "printWidth": 180,
    "useTabs": true,
    "indentWidth": 2,
    "lineBreak": "lf",
    "quotes": "double",
    "formatComments": false,
    "scriptIndent": false,
    "styleIndent": false,
    "closingBracketSameLine": false,
    "closingTagLineBreakForEmpty": "fit",
    "preferAttrsSingleLine": false,
    "singleAttrSameLine": true,
    "whitespaceSensitivity": "css",
    "doctypeKeywordCase": "upper",
    "vueComponentCase": "ignore",
    "strictSvelteAttr": false,
    "angularNextControlFlowSameLine": true,
    "scriptFormatter": "dprint",
    "ignoreCommentDirective": "markup-fmt-ignore",
    "ignoreFileCommentDirective": "dprint-ignore-file"
  },

  "typescript": {
    "semiColons": "prefer",
    "quoteStyle": "preferSingle",
    "quoteProps": "asNeeded",
    "useBraces": "maintain",
    "bracePosition": "maintain",
    "singleBodyPosition": "sameLine",
    "nextControlFlowPosition": "sameLine",
    "trailingCommas": "onlyMultiLine",
    "operatorPosition": "nextLine",
    "preferHanging": false,
    "preferSingleLine": false,
    "arrowFunction.useParentheses": "force",
    "binaryExpression.linePerExpression": true,

    "jsx.quoteStyle": "preferDouble",
    "jsx.bracketPosition": "sameLine",
    "jsxSelfClosingElement.spaceBeforeSlash": true,
    "jsxSelfClosingElement.bracketPosition": "sameLine",
    "jsxExpressionContainer.spaceSurroundingExpression": true,

    "memberExpression.linePerExpression": false,
    "typeLiteral.separatorKind": "semiColon",
    "enumDeclaration.memberSpacing": "newLine",
    "spaceAround": true,
    "spaceSurroundingProperties": true,
    "binaryExpression.spaceSurroundingBitwiseAndArithmeticOperator": true,
    "commentLine.forceSpaceAfterSlashes": true,
    "constructor.spaceBeforeParentheses": true,
    "constructSignature.spaceAfterNewKeyword": true,
    "getAccessor.spaceBeforeParentheses": true,
    "importDeclaration.spaceSurroundingNamedImports": true,
    "method.spaceBeforeParentheses": true,
    "setAccessor.spaceBeforeParentheses": true,
    "taggedTemplate.spaceBeforeLiteral": false,
    "typeAnnotation.spaceBeforeColon": true,
    "typeAssertion.spaceBeforeExpression": false,
    "whileStatement.spaceAfterWhileKeyword": true,
    "ifStatement.spaceAround": true,

    "module.sortImportDeclarations": "maintain",
    "module.sortExportDeclarations": "maintain",
    "exportDeclaration.sortNamedExports": "maintain",
    "exportDeclaration.sortTypeOnlyExports": "none",
    "importDeclaration.sortNamedImports": "caseSensitive",
    "importDeclaration.sortTypeOnlyImports": "none",

    "exportDeclaration.forceSingleLine": false,
    "exportDeclaration.forceMultiLine": "never",
    "importDeclaration.forceMultiLine": "never",

    "ignoreNodeCommentText": "dprint-ignore",
    "ignoreFileCommentText": "dprint-ignore-file"
  },

  "markup_fmt": {
    "svelteAttrShorthand": true
  }
}
