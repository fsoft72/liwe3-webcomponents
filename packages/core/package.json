{
  "name": "@liwe3/webcomponents",
  "version": "1.0.10",
  "description": "A collection of reusable web components including SmartSelect and AITextEditor",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./smart-select": {
      "types": "./dist/SmartSelect.d.ts",
      "import": "./dist/SmartSelect.js",
      "default": "./dist/SmartSelect.js"
    },
    "./ai-text-editor": {
      "types": "./dist/AITextEditor.d.ts",
      "import": "./dist/AITextEditor.js",
      "default": "./dist/AITextEditor.js"
    },
    "./toast": {
      "types": "./dist/Toast.d.ts",
      "import": "./dist/Toast.js",
      "default": "./dist/Toast.js"
    },
    "./popover-menu": {
      "types": "./dist/PopoverMenu.d.ts",
      "import": "./dist/PopoverMenu.js",
      "default": "./dist/PopoverMenu.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "select",
    "dropdown",
    "ai-editor",
    "text-editor",
    "liwe3"
  ],
  "author": "Liwe3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liwe3/webcomponents.git"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.16.0"
}